<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fintech.ternaku.Konsentrat.FragmentTernak">

    <!-- TODO: Update blank fragment layout -->



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <AutoCompleteTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="ID Ternak"
            android:ems="10"
            android:layout_alignParentTop="true"
            android:id="@+id/edtIDTernak"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_margin="7dp" />

        <TextView
            android:text="Ternak "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:layout_below="@+id/edtIDTernak"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:textColor="#000000"
            android:textStyle="normal|bold|italic" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/listTernak"
            android:layout_above="@+id/btnSelesai"
            android:layout_below="@+id/textView4"
            android:layout_alignParentStart="true"
            android:layout_margin="8dp" />

        <Button
            android:text="Selesai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:id="@+id/btnSelesai"
            android:layout_alignStart="@+id/listTernak"
            android:layout_alignEnd="@+id/edtIDTernak" />
    </RelativeLayout>
</FrameLayout>
